.signup
  .signup-form
    .signup-form__field
      .signup-form__field__1#form-name
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .signup-form__field__1__content
            = f.label :nickname, "ニックネーム"
            = f.text_field :nickname, class: "signup-form__field__1__content--text"
          .signup-form__field__1__content
            = f.label :email, "メールアドレス"
            = f.email_field :email, class: "signup-form__field__1__content--text"
          .signup-form__field__1__content
            = f.label :password, "パスワード(英数字8文字以上)"
            = f.password_field :password, class: "signup-form__field__1__content--text"
          .signup-form__field__1__content
            = f.label :password_confirmation, "パスワード(再入力)"
            = f.password_field :password_confirmation, class: "signup-form__field__1__content--text"
          .signup-form__field__1__content__button
            = f.submit "登録する", class: "signup-form__field__1__content__button--btn"
